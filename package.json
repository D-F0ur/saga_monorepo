{
  "name": "@cxygg/monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "preinstall": "pnpx only-allow pnpm",
    "start": "nr start --filter '*'",
    "prepare": "husky-install",
    "build": "nr update && esno scripts/build.ts",
    "build:rollup": "rollup -c",
    "clean": "rimraf dist packages/*/dist",
    "update": "nr -C packages/metadata update && esno scripts/update.ts",
    "changeset": "changeset ",
    "version": "changeset version",
    "release": "nr build && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/",
    "publish": "esno scripts/publish.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@rollup/plugin-json": "^4.1.0",
    "@types/fs-extra": "^9.0.13",
    "consola": "^2.15.3",
    "esbuild": "^0.14.37",
    "esbuild-register": "^3.3.2",
    "esno": "^0.14.1",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "typescript": "^4.6.3"
  }
}